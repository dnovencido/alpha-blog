<div id="page-content">
    <div class="container">
        <h1 class="text-center mt-4">Login to Alpha Blog</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <%= form_with(scope: :session, url: login_path, local: true) do |f|%>
                    <div class="form-group mb-3">
                        <%= f.label :email, class:"form-label"%><br/>
                        <%= f.email_field :email, class:"form-control", placeholder: "Enter your email address" %>
                    </div>
                    <div class="form-group mb-3">
                        <%= f.label :password, class:"form-label"%><br/>
                        <%= f.password_field :password, class:"form-control", placeholder: "Enter your password" %>
                    </div>
                    <div class="form-group">
                        <%= f.submit("Login", class: "btn btn-outline-success") %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>