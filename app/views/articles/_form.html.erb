<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <%= render 'shared/errors', obj: @article %>

            <%= form_with(model: @article, local: true) do |f| %>
                <div class="form-group mb-3">
                    <%= f.label :title, class:"form-label" %><br/>
                    <%= f.text_field :title, class: "form-control", placeholder: "Title"  %>
                </div>
                
                <div class="form-group mb-3">
                    <%= f.label :description, class:"form-label" %><br/>
                    <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Description" %>
                </div>

                <div class="form-group mb-3">
                    <%= f.label :category, class:"form-label" %><br/>
                    <%= f.collection_select :category_ids, Category.all, :id, :name, { prompt: "Select category" }, { multiple: true, size: 5, class: "form-select" }  %>
                </div>

                <div class="form-group">
                    <%= f.submit class: "btn btn-outline-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>